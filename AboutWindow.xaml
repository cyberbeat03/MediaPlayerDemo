<Window x:Class="WinMix.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About WinMix Desktop" Height="250" Width="400" WindowStartupLocation="CenterOwner">    
    
    <Grid Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Name:"/>
            <TextBox Text="{Binding AppName}" Focusable="True"/>
            
            <TextBlock Text="Version:"/>
            <TextBox Text="{Binding AppVersion}" Focusable="True"/>
            
            <TextBlock Text="Date:"/>
            <TextBox Text="{Binding BuildDate}" Focusable="True"/>
            <Button Content="Close" IsDefault="True" HorizontalAlignment="Center" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
