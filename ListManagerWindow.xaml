<Window x:Class="WinMix.ListManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinMix"
        mc:Ignorable="d"           
        Title="{Binding ListTitle}" Height="500" Width="800">

    <Window.Resources>
        <local:TimeSpanToStringConverter x:Key="TimeSpanToString"/>        
        <DataTemplate x:Key="ListItemLayout">
            <Grid Margin="4,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding DisplayName}" Grid.Column="0" Margin="4,0"/>                               
            </Grid>
        </DataTemplate>
        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Button Bar -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="8" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="_Add Media" Command="{Binding PickMediaCommand}" Margin="5"/>
                <Button Content="_Remove Selected" Command="{Binding RemoveSelectedItemCommand}" Margin="5"/>
                <Button Content="_New Playlist" Command="{Binding NewListCommand}" Margin="5"/>
                <Button Content="_Save" Command="{Binding SaveListCommand}" Margin="5"/>
                <Button Content="_Load Playlist" Command="{Binding LoadListCommand}" Margin="5"/>
                <Button Content="_Play" Command="{Binding StartPlaybackCommand}" Margin="5"/>
            </StackPanel>
        </Border>

        <!-- Centered ListView -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="1" Padding="16" BorderThickness="1" CornerRadius="8" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Media List" FontSize="16" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <ListView x:Name="MediaItemsList"
                              SelectionMode="Single"
                              ItemsSource="{Binding MediaItems}"
                              SelectedItem="{Binding SelectedItem}"
                              IsTabStop="True"
                              ItemTemplate="{StaticResource ListItemLayout}"
                              MinWidth="400"
                              MinHeight="350"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                        <ListView.InputBindings>
                            <KeyBinding Gesture="Delete" Command="{Binding RemoveSelectedItemCommand}" />
                            <KeyBinding Gesture="CTRL+C" Command="{Binding CopyItemCommand}"/>
                            <KeyBinding Gesture="CTRL+V" Command="{Binding PasteItemsCommand}"/>
                            <KeyBinding Gesture="Ctrl+N" Command="{Binding NewListCommand}"/>
                            <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveListCommand}"/>
                            <KeyBinding Gesture="Ctrl+O" Command="{Binding PickMediaCommand}"/>
                            <KeyBinding Gesture="Ctrl+Shift+O" Command="{Binding LoadListCommand}"/>
                        </ListView.InputBindings>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="_Play" Command="{Binding StartPlaybackCommand}"/>
                                <MenuItem Header="_Add" Command="{Binding PickMediaCommand}"/>
                                <MenuItem Header="_Remove" Command="{Binding RemoveSelectedCommand}"/>
                                <MenuItem Header="Move _Up" Command="{Binding MoveItemUpCommand}"/>
                                <MenuItem Header="Move _Down" Command="{Binding MoveItemDownCommand}"/>
                                <MenuItem Header="_Copy" Command="{Binding CopyItemCommand}"/>
                                <MenuItem Header="_Paste" Command="{Binding PasteItemsCommand}"/>
                                <MenuItem Header="_Load List" Command="{Binding LoadListCommand}"/>
                                <MenuItem Header="_Save List" Command="{Binding SaveListCommand}"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
