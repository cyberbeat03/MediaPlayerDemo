<Window x:Class="WinMix.ListManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinMix"
        mc:Ignorable="d"           
        Title="{Binding ListTitle}" Height="500" Width="500">

    <Window.Resources>
        <DataTemplate x:Key="MediaItemLayout">
            <StackPanel Margin="10">
                <TextBlock Text="{Binding DisplayName}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Content="_Add Media" Command="{Binding PickMediaCommand}" Margin="5"/>
            <Button Content="_Remove Selected" Command="{Binding RemoveSelectedItemCommand}" Margin="5"/>
            <Button Content="_New" Command="{Binding NewListCommand}" Margin="5"/>
            <Button Content="_Save" Command="{Binding SaveListCommand}" Margin="5"/>
            <Button Content="_Load" Command="{Binding LoadListCommand}" Margin="5"/>
            <Button Content="_Play" Command="{Binding PlayCommand}" Margin="5"/>
        </StackPanel>

        <StackPanel x:Name="MediaList" VerticalAlignment="Center" Margin="24">
            <TextBlock Text="Media List" FontSize="16"/>
            <ListView x:Name="MediaItemsList" SelectionMode="Single" ItemsSource="{Binding MediaItems}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" MinHeight="400" IsTabStop="True" ItemTemplate="{StaticResource MediaItemLayout}">

                <ListView.InputBindings>                    
                    <KeyBinding Gesture="Delete" Command="{Binding RemoveSelectedItemCommand}" />
                    <KeyBinding Gesture="CTRL+C" Command="{Binding CopyItemCommand}"/>
                    <KeyBinding Gesture="CTRL+V" Command="{Binding PasteItemsCommand}"/>                    
<KeyBinding Gesture="Ctrl+N" Command="{Binding NewListCommand}"/>
                    <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveListCommand}"/>
                    <KeyBinding Gesture="Ctrl+O" Command="{Binding PickMediaCommand}"/>
                    <KeyBinding Gesture="Ctrl+Shift+O" Command="{Binding LoadListCommand}"/>
                                    </ListView.InputBindings>
                
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="_Play" Command="{Binding PlayCommand}"/>
                        <MenuItem Header="_Add" Command="{Binding PickMediaCommand}"/>
                        <MenuItem Header="_Remove" Command="{Binding RemoveSelectedCommand}"/>
                        <MenuItem Header="Move _Up" Command="{Binding MoveItemUpCommand}"/>
                        <MenuItem Header="Move _Down" Command="{Binding MoveItemDownCommand}"/>
                        <MenuItem Header="_Copy" Command="{Binding CopyItemCommand}"/>
                                                <MenuItem Header="_Paste" Command="{Binding PasteItemsCommand}"/>
                        <MenuItem Header="_Load List" Command="{Binding LoadListCommand}"/>
                        <MenuItem Header="_Save List" Command="{Binding SaveListCommand}"/>                        
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </StackPanel>        
    </Grid>
</Window>
