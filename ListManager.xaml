<Window x:Class="WinMix.ListManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinMix"
        mc:Ignorable="d"
        Title="PlaylistManager" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="MediaItemLayout">
            <StackPanel Margin="10">
                <TextBlock Text="{Binding DisplayName}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <StackPanel x:Name="MediaList" VerticalAlignment="Center" Margin="24">
            <TextBlock Text="Media List" FontSize="16"/>
            <ListView x:Name="MediaItemsList" SelectionMode="Single" ItemsSource="{Binding MediaItems}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" MinHeight="300" IsTabStop="True" ItemTemplate="{StaticResource MediaItemLayout}">

                <ListView.InputBindings>                    
                    <KeyBinding Gesture="Delete" Command="{Binding RemoveSelectedItemCommand}" />
                    <KeyBinding Gesture="CTRL+C" Command="{Binding CopyItemCommand}"/>
                    <KeyBinding Gesture="CTRL+V" Command="{Binding PasteItemsCommand}"/>
                </ListView.InputBindings>

                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="_Add" Command="{Binding PickMediaCommand}"/>
                        <MenuItem Header="_Remove" Command="{Binding RemoveItemCommand}"/>
                        <MenuItem Header="Move _Up" Command="{Binding MoveItemUpCommand}"/>
                        <MenuItem Header="Move _Down" Command="{Binding MoveItemDownCommand}"/>
                        <MenuItem Header="_Copy" Command="{Binding CopyItemCommand}"/>
                        <MenuItem Header="Copy _All" Command="{Binding CopyAllItemsCommand}"/>
                        <MenuItem Header="_Paste" Command="{Binding PasteItemsCommand}"/>                       
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button IsDefault="True" Click="OkButton_Click" Content="_Play" Margin="5"/>
            <Button IsCancel="True" Click="CancelButton_Click" Content="_Cancel" Margin="5"/>
            <Button Content="_Add Media" Command="{Binding PickMediaCommand}" Margin="5"/>
            <Button Content="_Remove Selected" Command="{Binding RemoveSelectedItemCommand}" Margin="5"/>            
            </StackPanel>
        

    </Grid>
</Window>
