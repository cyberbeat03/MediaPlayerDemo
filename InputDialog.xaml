<Window x:Class="WinMix.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Text" Height="180" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>            
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">            
                        <TextBlock Text="Enter a name for the new playlist:" Margin="0,0,0,8"/>
            <TextBox x:Name="InputBox" MaxLength="255" MinWidth="300" Height="30" Margin="0,0,0,8"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="_Save" Width="50" Margin="0,0,8,0" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="_Cancel" Width="50" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
