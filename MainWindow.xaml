<Window x:Class="WinMix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding AppTitle}" WindowStartupLocation="CenterScreen" Height="600" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="Button" x:Key="TransportButton">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            </Style>        
        </Window.Resources>

        <Window.InputBindings>        
        <KeyBinding Gesture="Escape" Command="{Binding PauseCommand}"/>
        <KeyBinding Gesture="F6" Command="{Binding LoadMediaCommand}"/>
        <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenFilesCommand}"/>        
    </Window.InputBindings>

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="_Add Files" Command="{Binding OpenFilesCommand}"/>
            <MenuItem Header="_Remove Current Item" Command="{Binding RemoveItemCommand}"/>
            <MenuItem Header="_Copy To Clipboard" Command="{Binding CopyItemCommand}"/>
            <MenuItem Header="Copy _All Items To Clipboard" Command="{Binding CopyAllItemsCommand}"/>
            <MenuItem Header="_Paste Files from Clipboard" Command="{Binding PasteItemsCommand}"/>
            <MenuItem Header="View _List Manager" Command="{Binding LoadMediaCommand}"/>
        </ContextMenu>
    </Window.ContextMenu>                    
    
    <Grid>
         <StackPanel Margin="4" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Media Player Status" FontSize="16"/>
                                <TextBox x:Name="StatusText" IsReadOnly="True" IsReadOnlyCaretVisible="True" Text="{Binding DisplayStatus}" Height="25" Width="150"/>
                <Button Content="_Load Media..." Width="100" Height="25" Command="{Binding OpenFilesCommand}"/>                
            </StackPanel>
            <TextBlock Text="{Binding ElapsedTime}" Focusable="True" Width="50" Height="25"/>
            <TextBlock Text="{Binding TotalDuration}" Focusable="True" Width="50" Height="25"/>            
            
            <CheckBox Content="Repeat Mode" IsChecked="{Binding CanRepeat}" Margin="24"/>
            <ContentControl Content="{Binding MPlayer}" Focusable="False" MinHeight="300" MinWidth="450" Background="Black"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="24">
                <Button Content="_Play" Style="{StaticResource TransportButton}" Command="{Binding PlayCommand}" />                
                <Button Content="Pa_use" Style="{StaticResource TransportButton}" Command="{Binding PauseCommand}" />
                <Button Content="_Stop" Style="{StaticResource TransportButton}" Command="{Binding StopCommand}" />
                <Button Content="_Rewind" Style="{StaticResource TransportButton}" Command="{Binding RewindCommand}" />
                <Button Content="_Fast Forward" Style="{StaticResource TransportButton}" Command="{Binding FastForwardCommand}" />
                <Button Content="Pre_vious" Style="{StaticResource TransportButton}" Command="{Binding PlayPreviousCommand}"/>
                <Button Content="_Next" Style="{StaticResource TransportButton}" Command="{Binding PlayNextCommand}"/>
            </StackPanel>        
        </StackPanel>
    </Grid>
</Window>