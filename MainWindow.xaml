<Window x:Class="MediaElementTrial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaElementTrial"
        mc:Ignorable="d"
        Title="Playing Audio in WPF" WindowStartupLocation="CenterScreen" Height="600" Width="800">
    
    <Window.Resources>
        <DataTemplate x:Key="SingleLineView">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding MediaName}"/>                
            </StackPanel>
        </DataTemplate>
    </Window.Resources>    
    
    <Grid>                
        <StackPanel Margin="24">            
            <ContentControl Content="{Binding Player.MPlayer}" Height="350"/>
            <CheckBox Content="Repeat Mode" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="24"/>                        
            <Label Content="Media Player Status"/>
            <TextBlock Text="{Binding Player.DisplayStatus}" Focusable="True" Height="25" Width="100"/>
            <TextBlock Text="{Binding Player.ElapsedTime}" Focusable="True" Width="50" Height="25"/>
            <TextBlock Text="{Binding Player.TotalDuration}" Focusable="True" Width="50" Height="25"/>
            <Label Content="Adjust playback speed"/>
                        <Slider x:Name="speedSlider" Minimum="0.5" Maximum="1.5" Value="1" ValueChanged="SpeedSlider_ValueChanged" Width="70"/>            
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="64">                
                <Button Content="_Open..." Width="100" Click="AddMedia_Click"/>
                <Button Content="Pre_vious" Width="100" Click="PreviousButton_Click"/>
                <Button Content="_Rewind" Click="RewindButton_Click"/>
                <Button Content="_Play" Width="100" Click="PlayMedia_Click"/>
                <Button Content="Pa_use" Width="100" Click="Pause_Click"/>                
                <Button Content="_Fast Forward" Click="ForwardButton_Click"/>
                <Button Content="_Next" Width="100" Click="NextButton_Click"/>
            </StackPanel>                         
        </StackPanel>
    </Grid>
</Window>