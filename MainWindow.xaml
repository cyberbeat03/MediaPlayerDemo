<Window x:Class="WinMix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WinMix Desktop" WindowStartupLocation="CenterScreen" Height="600" Width="800">
    
    <Window.InputBindings>        
        <KeyBinding Gesture="Escape" Command="{Binding PauseCommand}"/>
        <KeyBinding Gesture="F6" Command="{Binding LoadMediaCommand}"/>
        <KeyBinding Gesture="Ctrl+O" Command="{Binding LoadFilesCommand}"/>        
    </Window.InputBindings>
    
    <Grid>
        <StackPanel Margin="24" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Media Player Status" FontSize="16"/>
                                <TextBox x:Name="StatusText" IsReadOnly="True" IsReadOnlyCaretVisible="True" Text="{Binding DisplayStatus}" Height="25" Width="150"/>
                <Button Content="_Load Media..." Width="100" Command="{Binding LoadMediaCommand}"/>                
            </StackPanel>
            <TextBlock Text="{Binding ElapsedTime}" Focusable="True" Width="50" Height="25"/>
            <TextBlock Text="{Binding TotalDuration}" Focusable="True" Width="50" Height="25"/>

            <Label Content="Adjust playback speed"/>
            <Slider Minimum="0.5" Maximum="1.5" Value="{Binding MPlayer.SpeedRatio, Mode=TwoWay}" Width="200"/>
            
            <CheckBox Content="Repeat Mode" IsChecked="{Binding CanRepeat}" Margin="24"/>
            <ContentControl Content="{Binding MPlayer}" Focusable="False" Height="400"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="64">                
                <Button Content="_Rewind" Command="{Binding RewindCommand}" />
                <Button Content="_Play" Width="100" Command="{Binding PlayCommand}" />
                <Button Content="Pa_use" Width="100" Command="{Binding PauseCommand}" />
                <Button Content="_Fast Forward" Command="{Binding FastForwardCommand}" />
                <Button Content="Pre_vious" Width="100" Command="{Binding PreviousCommand}"/>
                <Button Content="_Next" Width="100" Command="{Binding NextCommand}"/>
            </StackPanel>        
        </StackPanel>
    </Grid>
</Window>